<div class=" container">
  <div class="jumbotron jumbotron-fluid">
    <div class="container">
      <h1 class="display-4">Enterprise Information System - Recycle</h1>
      <p class="lead">Welcome !</p>
    </div>
  </div>
</div>
<div class="container">
  <div class="dropdown col-md-12">
    <% if(item == null){ %>
    <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown"
      aria-haspopup="true" aria-expanded="false">
      Departments
    </button>
    <%} else { %>
    <button class="btn btn-primary dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown"
      aria-haspopup="true" aria-expanded="false">
      <%= item %>
    </button>
    <%} %>
    <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
      <a class="dropdown-item" href="/human-resource?d=Order">Order</a>
      <a class="dropdown-item" href="/human-resource?d=Inventory">Inventory</a>
      <a class="dropdown-item" href="/human-resource?d=Accounting">Finance</a>
      <a class="dropdown-item" href="/human-resource?d=HumanResource">Human Resource</a>
    </div>


  </div>
  <div class="row col-md-12">
    <div class="col-md-8">
      <ul class="list-group">
        <% emps.forEach(function(model){ %>
        <li class="list-group-item d-flex justify-content-between align-items-center">
          <%= model.username %>
          <a href="/human-resource/<%= model.id %>"><button class="btn btn-info">Detail</button></a>
        </li>
        <% }); %>
      </ul>
    </div>
    <div class="col-md-4">
      <div class="container">
        <div class="col-md-12">
          <h3>
            Add New Employee
          </h3>
        </div>
        <hr style="height:1px;border:none;border-top:1px solid #000;" />

        <div class="col-md-12">
          <form action="/human-resource/add" method="POST">
            <div class="form-group">
              <label>Employee Name:</label>
              <input type="text" class="form-control" name="Employee[username]" required>
            </div>
            <div class="form-group">
              <label>Password:</label>
              <input type="text" class="form-control" name="Employee[password]" required>
            </div>
            <div class="form-group">
              <label>Department:</label>
              <input type="text" class="form-control" name="Employee[department]" required>
            </div>
            <div class="form-group">
              <label>Salary:</label>
              <input type="number" class="form-control" name="Employee[salary]" required>
            </div>
        </div>
        <button type="submit" class="btn btn-info col-md-12">Add New Employee</button>
      </div>
    </div>
  </div>