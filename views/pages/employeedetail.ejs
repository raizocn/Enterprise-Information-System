<div class=" container">
    <div class="jumbotron jumbotron-fluid">
        <div class="container">
            <h1 class="display-4">Enterprise Information System - Recycle</h1>
            <p class="lead">Welcome !</p>
        </div>
    </div>
</div>
<div class="container">
    <div class="col-md-12">
        <h3>
            <%= target.username %>
        </h3>
    </div>
    <hr style="height:1px;border:none;border-top:1px solid #000;" />

    <div class="col-md-12">
        <h4>No:
            <%= target.id %>
        </h4>
        <form action="/human-resource/update/<%= target.id %>" method="POST">
            <div class="form-group">
                <label>Employee Name:</label>
                <input type="text" class="form-control" value="<%= target.username %>" name="Employee[username]"
                    required>
            </div>
            <div class="form-group">
                <label>Password:</label>
                <input type="text" class="form-control" value="<%= target.password %>" name="Employee[password]"
                    required>
            </div>
            <div class="form-group">
                <label>Department:</label>
                <input type="text" class="form-control" value="<%= target.department %>" name="Employee[department]"
                    required>
            </div>
            <div class="form-group">
                <label>Salary:</label>
                <input type="number" class="form-control" value="<%= target.salary %>" name="Employee[salary]" required>
            </div>
    </div>
    <div class="row">
        <button type="submit" class="btn btn-warning">Update</button>
        </form>
        <form action="/human-resource/delete/<%= target.id %>" method="POST">
            <button class="btn btn-danger">Delete</button>
        </form>
        <a href="/human-resource"><button class="btn btn-primary">Close</button></a>
    </div>
</div>